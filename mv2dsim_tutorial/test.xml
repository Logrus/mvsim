<mv2dsim_world version="1.0">
	<simul_timestep>0.025</simul_timestep> <!-- Simulation fixed-time interval for numerical integration -->

	<!-- ========================
		   Scenario definition
	     ======================== -->
	<world:gridmap>
		<!-- File can be an image or an MRPT .gridmap file -->
		<file>mv2dsim_demo_world1.png</file>
		
		<!-- The rest of params are ignored if file is an MRPT gridmap -->
		<resolution>0.15</resolution>
	</world:gridmap>
		 
	<!-- =============================
		   Vehicle classes definition 
	     ============================= -->
	<vehicle:class name="small-car">
		<!--  Dynamical model -->
		<dynamics class="differential">
			<!-- Params -->
			<l_wheel pos="0.0  0.5" mass="2.0" width="0.20" diameter="0.40" />
			<r_wheel pos="0.0 -0.5" mass="2.0" width="0.20" diameter="0.40" />
			<chassis mass="10.0" zmin="0.05" zmax="0.6">
				<shape>
					<pt>-0.4 -0.5</pt> 
					<pt>-0.4  0.5</pt> 
					<pt> 0.4  0.5</pt> 
					<pt> 0.6  0.3</pt> 
					<pt> 0.6 -0.3</pt> 
					<pt>-0.4 -0.5</pt> 
				</shape>
			</chassis>
		</dynamics>
		
		<!--   Motor controller -->
		<controller class="default">
			<!-- Params -->
		</controller>
		
		<!-- Friction force simulation -->
		<friction class="default">
			<!-- Params -->
		</friction>

		<!-- Sensors: -->
		
		<sensor:laser name="laser1">
			<pose> 0.5  0.0  0.0 </pose>
			<fov_degrees>180</fov_degrees>
			<nrays>181</nrays>
		</sensor:laser>
	</vehicle:class>
		 
	<!-- ========================
		   Vehicle(s) definition 
	     ======================== -->
	<vehicle name="r1" class="small-car">
		<init_pose>0 0 0</init_pose>  <!-- In global coords: x,y, yaw(deg) -->
		<init_vel>0 0 0</init_vel>  <!-- In local coords: vx,vy, omega(deg/s) -->
	</vehicle>

	<vehicle name="r2" class="small-car">
		<init_pose>7.0 0.2 -176</init_pose>  <!-- In global coords: x,y, yaw(deg) -->
		<init_vel>0 0 0</init_vel>  <!-- In local coords: vx,vy, omega(deg/s) -->
	</vehicle>
	
</mv2dsim_world>
